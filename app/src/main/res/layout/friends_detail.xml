<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Friend Information"
            android:textStyle="italic"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/gradation1"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="NAME"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/friend_name"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="PHONE"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/friend_phone"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="STATE"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/friend_state"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="WANT TO EAT"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/friend_likeList"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:layout_gravity="left"
                android:scaleType="centerInside"
                android:src="@drawable/ic_call_foreground" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_messagel_foreground" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>